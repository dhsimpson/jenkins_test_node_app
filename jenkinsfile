node {
    stage ('Clone repository') {
        checkout scm
    }
    stage ('Build image') {
        app = docker.build("dhsimpson/jenkins-example-node-app")
    }
    stage ('Push image') {
        docker.withRegistry('https://hub.docker.com', 'docker-hub') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}

stage ('Build image') {
    app = docker.build("dhsimpson/jenkins-example-node-app")
}

stage ('Push image') {
    docker.withRegistry('https://hub.docker.com', 'docker-hub') {
        app.push("${env.BUILD_NUMBER}")
        app.push("latest")
    }
}